{
  "compilerOptions": {
    "target": "es2024",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
